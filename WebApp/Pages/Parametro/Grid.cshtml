@page
@model WebApp.Pages.Parametro.GridModel
@{
}


<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            Parametros
        </div>
        
        <link rel="stylesheet" href="../Css/Estilos.css" />


        <div class="card-body">
            <h5 class="card-title">Lista De Parametros</h5>
            <a class="btn btn-secondary" asp-page="Edit"><i class='bx bx-add-to-queue'></i></a>

            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table table-hover table table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Codigo</th>
                                <th>Descripcion</th>
                                <th>Valor</th>
                                <th>Estado</th>
                                <th>Accion</th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.GridList)
                            {
                                <tr>

                                    <td>@item.Id_Parametro</td>
                                    <td>@item.Codigo</td>
                                    <td>@item.Descripcion</td>
                                    <td>@item.Valor</td>
                                    <td>@item.Estado</td>

                                    <td>
                                        <a class="btn btn-secondary" asp-page="Edit" asp-route-id="@item.Id_Parametro"><i class='bx bxs-edit-alt'></i></a>
                                        <button type="button" class="btn btn-secondary" onclick="ParametroGrid.OnClickEliminar(@item.Id_Parametro)"><i class='bx bxs-trash-alt'></i></button>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{ 


    <script>

        var MensajeApp = "@Html.Raw(Model.Mensaje)";

    </script>

<script defer src="~/App/Parametro/Grid.js"></script>

}